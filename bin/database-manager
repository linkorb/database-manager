#!/usr/bin/env php
<?php

use Symfony\Component\Console\Application;

if (file_exists($a = __DIR__.'/../../../autoload.php')) {
    require_once $a;
} else {
    require_once __DIR__.'/../vendor/autoload.php';
}

$application = new Application('Database Manager Console Client', '1.0.0');
$application->setCatchExceptions(true);
$application->add(new \LinkORB\Component\DatabaseManager\Command\ConnectionConfigCommand());
$application->add(new \LinkORB\Component\DatabaseManager\Command\DatabaseLoadFixtureCommand());
$application->add(new \LinkORB\Component\DatabaseManager\Command\DatabaseLoadSchemaCommand());
$application->run();
